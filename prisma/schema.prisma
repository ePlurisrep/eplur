generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // optional direct URL for session-mode migrations (use 5432)
  directUrl = env("DIRECT_URL")
}
// Canonical graph schema
model Node {
  id            String   @id @default(uuid()) @db.Uuid
  nodeType      NodeType
  name          String

  externalId String?   @unique
  description String?
  metadata   Json?
  isPublic   Boolean   @default(true)
  createdAt  DateTime  @default(now())

  relationsFrom Relation[] @relation("from")
  relationsTo   Relation[] @relation("to")

  // Relations for code metadata overlays
  codeArtifact     CodeArtifact?     @relation("CodeArtifact_entity")
  codeCapabilities CodeCapability[]  @relation("CodeCapability_entity")
  codeDependencies CodeDependency[]  @relation("CodeDepSource")
  codeDependents   CodeDependency[]  @relation("CodeDepTarget")
}

enum NodeType {
  PERSON
  BILL
  COMMITTEE
  AGENCY
  COURT
  BRANCH
  CHAMBER
  CODE_ARTIFACT
  VOTE
  USER_NODE
}

model Relation {
  id        String       @id @default(cuid())
  fromId    String
  toId      String
  type      RelationType
  weight    Float?
  metadata  Json?
  createdAt DateTime     @default(now())

  from Node @relation("from", fields: [fromId], references: [id])
  to   Node @relation("to", fields: [toId], references: [id])
}

enum RelationType {
  MEMBER_OF
  SPONSORED
  VOTED_ON
  VOTED_FOR
  VOTED_AGAINST
  PART_OF
  REPORTS_TO
  APPOINTED_BY
}

// Optional user table for overlays and future auth
model User {
  id        String    @id @default(cuid())
  email     String?   @unique
  createdAt DateTime  @default(now())

  overlays UserNode[]
  apiTokens ApiToken[]
}

// User overlay nodes augment public Nodes without overwriting
model UserNode {
  id       String   @id @default(cuid())
  userId   String
  nodeId   String
  tags     String[] @default([])
  notes    String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  // nodeId is not constrained to allow overlays on external data
}

// One-to-one metadata overlay for code artifacts
model CodeArtifact {
  entityId     String   @id @db.Uuid @map("entity_id")
  entity       Node     @relation("CodeArtifact_entity", fields: [entityId], references: [id], onDelete: Cascade)
  ecosystem    String
  artifactType String   @map("artifact_type")
  homepage     String?
  repoUrl      String?  @map("repo_url")
  license      String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("code_artifacts")
}

model CodeCapability {
  id          String   @id @default(uuid()) @db.Uuid
  entityId    String   @db.Uuid @map("entity_id")
  entity      Node     @relation("CodeCapability_entity", fields: [entityId], references: [id], onDelete: Cascade)
  capability  String
  confidence  Float    @default(1.0)
  source      String   @default("manual")
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("code_capabilities")
  @@index([capability])
  @@index([entityId])
}

model CodeDependency {
  id                   String   @id @default(uuid()) @db.Uuid
  entityId             String   @db.Uuid @map("entity_id")
  dependsOnEntityId    String   @db.Uuid @map("depends_on_entity_id")
  entity               Node     @relation("CodeDepSource", fields: [entityId], references: [id], onDelete: Cascade)
  dependsOn            Node     @relation("CodeDepTarget", fields: [dependsOnEntityId], references: [id], onDelete: Cascade)
  dependencyType       String   @default("runtime") @map("dependency_type")
  createdAt            DateTime @default(now()) @map("created_at")

  @@map("code_dependencies")
  @@unique([entityId, dependsOnEntityId])
  @@index([entityId])
  @@index([dependsOnEntityId])
}
